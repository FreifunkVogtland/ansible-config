[Unit]
Description=Packet Filtering Framework
Before=network-pre.target
Wants=network-pre.target

[Service]
Type=oneshot
ExecStart=/usr/bin/flock -x /run/xtables.lock /sbin/iptables-restore /etc/iptables/iptables.rules
ExecReload=/usr/bin/flock -x /run/xtables.lock /sbin/iptables-restore /etc/iptables/iptables.rules
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
