[Unit]
Description=IPv6 Packet Filtering Framework
Before=network-pre.target
Wants=network-pre.target

[Service]
Type=oneshot
ExecStart=/usr/bin/flock -x /run/xtables.lock /sbin/ip6tables-restore /etc/iptables/ip6tables.rules
ExecReload=/usr/bin/flock -x /run/xtables.lock /sbin/ip6tables-restore /etc/iptables/ip6tables.rules
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
