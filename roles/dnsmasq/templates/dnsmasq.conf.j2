local=/ffv/
domain=ffv
no-ping
no-hosts

{% for name in (mesh.keys() |sort()) %}
interface=bat-{{ name }}
{% endfor %}

bind-dynamic
dhcp-authoritative

{% for name in (mesh.keys() |sort()) %}
dhcp-range=bat-{{ name }},{{ mesh[name]['dnsmasq']['start'] }},{{ mesh[name]['dnsmasq']['end'] }},{{ mesh[name]['ipv4']['subnet'] | ipaddr('netmask') }},30m
dhcp-option=bat-{{ name }},3,{{ mesh[name]['ipv4']['ip'] }}

{% if name == 'ffv' %}
dhcp-option=bat-{{ name }},6,{{ mesh[name]['ipv4']['ip'] }}
{% else %}
dhcp-option=bat-{{ name }},6,{{ mesh[name]['ipv4']['subnet'] | ipaddr(1) | ipaddr('address') }}
{% endif %}

{% endfor %}

dhcp-option=119,ffv
dhcp-option=26,1394
except-interface=lo

read-ethers
addn-hosts=/opt/freifunk/dns/hosts

port=0
