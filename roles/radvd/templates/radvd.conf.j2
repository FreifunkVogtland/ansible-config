interface bat0 {
  AdvSendAdvert on;
  IgnoreIfMissing on;

  AdvManagedFlag off;
  AdvOtherConfigFlag on;
  AdvLinkMTU 1280;

  MaxRtrAdvInterval 30;

  prefix {{ ROUTERIPV6SUBNET }} {
    AdvOnLink on;
    AdvAutonomous on;
    AdvRouterAddr on;
  };

  RDNSS {{ ROUTERIPV6 | ipaddr('address') }} {
  };
};
